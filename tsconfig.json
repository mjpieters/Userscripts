{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "isolatedModules": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strict": true,
    "outDir": "./dist",
    "module": "amd",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@userscriptTools/*": ["Libs/UserscriptTools/*"]
    }
  }
}